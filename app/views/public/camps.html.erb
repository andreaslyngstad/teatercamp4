<% @page_title = "Kurs"%>

<div id="section4">

<div class="left_camps camps_bk">


	<% @camps.each do |camp| %>
  <div class="camp_list">

		<div class="camp_col_1 camp_holder">
				<%  if camp.cover_image.attached? %>
				<%= image_tag camp.cover_image.variant(:medium) %>
				<% end %>
		</div>

		<div class="camp_col_2 camp_holder">
				<p><%= link_to(camp.name, view_camp_path(camp)) %></p>
				<p><%= raw(camp.ingress)%></p>
		</div>



		<div class="camp_col_3 camp_holder">
				<p>Pris <%= number_to_currency(camp.products.sum(:total_price), unit: "Kroner", format: "%n %u", precision: 0, delimiter: " ") %></p>
				<p>Alder <%=h camp.age1 %> - <%=h camp.age2 %></p>
				<p><%=h camp.begin.strftime('%d.%m.%Y') %> -
				<%=h camp.end.strftime('%d.%m.%Y') %></p>
				<p>
					<% if camp.registrations.count < camp.participants %>
								<%= link_to("Meld deg på", new_registration_path(:id => camp) )%>
							<% else %>
					 				Fult <%= link_to("Sett deg på venteliste", new_registration_path(:id => camp) )%>
							<%end%>
				</p>
		</div>
	</div>
<% end %>





</div>
