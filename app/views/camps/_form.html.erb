
<li>
<%= label_tag 'Navn' %>
<%= f.text_field :name %>
</li>

<li>
<%= label_tag 'Ingress' %>
<%= f.text_area :ingress %>
</li>

<li>
<%= label_tag 'Beskrivelse' %>
<%= f.text_area :description %>
</li>


<li>
<%= label_tag 'Alder fra - til' %>
<%= f.select :age1, 1..99 %>
<%= f.select :age2, 1..99 %>
</li>

<li>
<%= label_tag 'Begynner' %>
<%= f.date_select :begin, :start_year => Time.now.year, :order => [:day,:month,:year]  %>
</li>

<li>
<%= label_tag 'Slutter' %>
<%= f.date_select :end, :start_year => Time.now.year, :order => [:day,:month,:year] %>
</li>

<li>
<%= label_tag 'Antall deltagere' %>
<%= f.select :participants, 1..40 %>

</li>
<li>
<%= label_tag 'Produkter' %><li>
	<% @products.each do |product| -%>
	<li><%= check_box_tag('camp[product_ids][]', product.id, @camp.products.map {|c| c.id }.include?(product.id), :class => "pro_check") %>
	<%= product.description %></li>
	<% end %>


<li>
<%= label_tag 'Offentlig' %>
<%= f.select :public,  [['Ja', true], ['Nei', false], ] %>
</li>
